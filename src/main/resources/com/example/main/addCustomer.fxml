<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.main.controller.AddCustomer"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label layoutX="25.0" layoutY="34.0" text="Name" />
        <TextField fx:id="name" layoutX="93.0" layoutY="30.0" />
        <Label layoutX="25.0" layoutY="77.0" text="ID" />
        <TextField fx:id="IDField" disable="true" editable="false" layoutX="93.0" layoutY="73.0" />
        <Label layoutX="25.0" layoutY="120.0" text="Address" />
        <TextField fx:id="addressField" layoutX="93.0" layoutY="116.0" />
        <Label layoutX="25.0" layoutY="163.0" text="Postal Code" />
        <TextField fx:id="postalCodeField" layoutX="93.0" layoutY="159.0" />
        <Label layoutX="25.0" layoutY="200.0" text="Phone Number" />
        <TextField fx:id="phoneNumberField" layoutX="138.0" layoutY="196.0" />
        <Button fx:id="addCustomerField" layoutX="106.0" layoutY="271.0" mnemonicParsing="false" onAction="#addCustomer" text="Add Customer" />
        <Label layoutX="347.0" layoutY="34.0" text="Country" />
        <Label layoutX="347.0" layoutY="112.0" text="Division" />
        <Button fx:id="Cancel" layoutX="241.0" layoutY="271.0" mnemonicParsing="false" onAction="#cancel" text="Cancel" />
        <ComboBox fx:id="stringComboBox" layoutX="415.0" layoutY="30.0" onAction="#genUpdate" prefWidth="150.0" />
        <ComboBox fx:id="division" layoutX="412.0" layoutY="108.0" prefWidth="150.0" />
        <Label fx:id="countryErrorLabel" layoutX="380.0" layoutY="65.0" prefHeight="17.0" prefWidth="193.0" text="Country cannot remain unselected" textFill="#bc0000" visible="false" />
        <Label fx:id="divisionErrorLabel" layoutX="370.0" layoutY="141.0" prefHeight="17.0" prefWidth="193.0" text="Province cannot remain unselected" textFill="#bc0000" visible="false" />
    </children>

</AnchorPane>
